<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="firstportfolio.wordcharger.repository.FixedDayMapper">

    <insert id="fixedDayInit">
        INSERT INTO fixedday VALUES (#{id}, '1', '1', '1')
    </insert>

    <select id="findFixedDayByIdAndColumn" resultType="String">
        SELECT ${columnName} FROM fixedday WHERE id = #{id}
    </select>

</mapper>